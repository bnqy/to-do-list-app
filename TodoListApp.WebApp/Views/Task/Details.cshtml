@model TodoListApp.Services.Models.TaskTodo

@{
	string status;
	if (Model.StatusId == "not started")
	{
		status = "Not Started";
	}
	else if (Model.StatusId == "in progress")
	{
		status = "In Progress";
	}
	else
	{
		status = "Completed";
	}

	string completionStatus = Model.IsCompleted ? "Completed" : "Pending";
}

<h2>Task Details</h2>
<dl class="dl-horizontal">
	<dt>Name</dt>
	<dd>@Model.Title</dd>
	<dt>Description</dt>
	<dd>@Model.Description</dd>
	<dt>Status</dt>
	<dd>@status</dd>
	<dd>@completionStatus</dd>
	<dt>Due Date</dt>
	<dd>@Model.DueDate</dd>
</dl>
<a asp-action="Index" asp-route-todoListId="@Model.TodoListId" class="btn btn-secondary">Back to List</a>
